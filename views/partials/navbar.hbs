<head>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<nav>
  <a href="/" style="font-size: 36px;">Jobify</a>

  <form class="search-bar" action="/search" method="GET" style="flex-grow: 1; margin: 0 20px;">
    <input type="text" name="keyword" placeholder="Search jobs..." style="padding: 5px 10px;">
    <button type="submit" style="padding: 5px 10px;">Search</button>
  </form>

  <div class="auth-links">
    {{#if user}}
      <a href="/myJobs">My Jobs</a>
      <a href="/logout">
        <i class="fas fa-sign-out-alt"></i>
      </a>
    {{else}}
      <a href="/login">
        <i class="fas fa-sign-in-alt"></i>
      </a>
      <a href="/signup">
        <i class="fas fa-user-plus"></i> 
      </a>
    {{/if}}
  </div>
</nav>
